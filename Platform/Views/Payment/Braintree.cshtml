@model MemberDatabase.Member
@{
    ViewBag.Title = "Make Payments";
}
<div class="wrapper">
    <div class="checkout container">

        <header>
            <h1>Hi, <br>Let's test a transaction</h1>
            <p>
                Make a test payment with Braintree using PayPal or a card
            </p>
        </header>
        <form id="payment-form" action="Payment/Subscription" method="post">
            <section>
                <div class="bt-drop-in-wrapper">
                    <div id="bt-dropin"></div>
                </div>
                <label for="amount">
                    <span class="input-label">Pay once </span>
                    <div class="input-wrapper amount-wrapper">
                        <input id="amount" name="amount" type="tel" min="1" placeholder="Amount" value="80">
                    </div>
                </label>
            

                <button class="button" value="Transaction" name="action:Transaction"><span>Full Transaction</span></button>
             </section>
            <section>
                <label for="subscription">
                    <span class="input-label">Pay Quarterly</span>
                    <div class="input-wrapper amount-wrapper">
                        <input id="subscription" name="subscription" type="tel" min="1" placeholder="Amount" value="20">
                    </div>
                </label>

                <button class="button" value="Subscription" name="action:Subscription"><span>Subscription Transaction</span></button>
            </section>
            
        </form>
    </div>
</div>
<script src="https://js.braintreegateway.com/v2/braintree.js"></script>
<script src="~/Scripts/jquery.lettering-0.6.1.min.js"></script>
<script src="~/Scripts/demo.js"></script>
<script>
    var checkout = new Demo({
        formID: "payment-form"
    });
  var client_token = "@ViewBag.ClientToken";
  braintree.setup(client_token, "dropin", {
    container: "bt-dropin"
  });



</script>
